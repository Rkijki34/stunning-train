<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title><%= typeof title !== 'undefined' ? (title + ' | ') : '' %>Modern Forum</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/public/css/styles.css" rel="stylesheet">
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/">Forum</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div id="nav" class="collapse navbar-collapse">
        <ul class="navbar-nav me-auto">
          <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
          <% if (currentUser) { %>
            <li class="nav-item"><a class="nav-link" href="/threads/new">New Thread</a></li>
          <% } %>
        </ul>
        <ul class="navbar-nav ms-auto">
          <% if (currentUser) { %>
            <li class="nav-item"><span class="navbar-text me-2">Hi, <strong><%= currentUser.username %></strong></span></li>
            <li class="nav-item"><a class="btn btn-sm btn-outline-light" href="/logout">Logout</a></li>
          <% } else { %>
            <li class="nav-item"><a class="nav-link" href="/login">Login</a></li>
            <li class="nav-item"><a class="btn btn-sm btn-success ms-2" href="/register">Sign up</a></li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <main class="container my-4">
    <%- body %>
  </main>

  <footer class="text-center text-muted py-4">
    <small>&copy; <%= new Date().getFullYear() %> Modern Forum</small>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>